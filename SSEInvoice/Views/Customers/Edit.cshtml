@model SSEInvoice.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CustomerId" />
                    <div class="form-group">
                        <label asp-for="CustomerName" class="control-label"></label>
                        <input asp-for="CustomerName" class="form-control" />
                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ContactPersonName" class="control-label"></label>
                        <input asp-for="ContactPersonName" class="form-control" />
                        <span asp-validation-for="ContactPersonName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GSTNumber" class="control-label"></label>
                        <input asp-for="GSTNumber" class="form-control" />
                        <span asp-validation-for="GSTNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                        </label>
                    </div>
                    <h4>Parmanent Address :</h4>
                    <input type="hidden" asp-for="PermanentAddress.ID" />
                    <div class="border p-1">
                        <div class="form-group">
                            <label asp-for="PermanentAddress.Line1"></label>
                            <input type="text" class="form-control" asp-for="PermanentAddress.Line1" placeholder="1234 Main St">
                            <span asp-validation-for="PermanentAddress.Line1" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="PermanentAddress.Line2"></label>
                            <input type="text" class="form-control" asp-for="PermanentAddress.Line2" placeholder="Apartment, studio, or floor">
                            <span asp-validation-for="PermanentAddress.Line2" class="text-danger"></span>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="PermanentAddress.City"></label>
                                <input type="text" asp-for="PermanentAddress.City" class="form-control">
                                <span asp-validation-for="PermanentAddress.City" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-4">
                                <label asp-for="PermanentAddress.State"></label>
                                <input type="text" asp-for="PermanentAddress.State" class="form-control">
                                <span asp-validation-for="PermanentAddress.State" class="text-danger"></span>
                                @*<select id="inputState" class="form-control">
                        <option selected>Choose...</option>
                        <option>...</option>
                    </select>*@
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="PermanentAddress.StateCode"></label>
                                <input type="text" asp-for="PermanentAddress.StateCode" class="form-control">
                                <span asp-validation-for="PermanentAddress.StateCode" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-2">
                                <label asp-for="PermanentAddress.PINCode"></label>
                                <input type="text" class="form-control" asp-for="PermanentAddress.PINCode">
                                <span asp-validation-for="PermanentAddress.PINCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">



                    @{ var ShipingAddress = Model?.ShipingAddress;}
                    <h4>Shipping Address : </h4>
                    <span asp-validation-for="ShipingAddress" class="text-danger"></span>
                    <div class="row" id="sAddresses">
                        @for (var i = 0; i < ShipingAddress?.Count(); i++)
                            { var j = i + 1;
                            <input type="hidden" asp-for="ShipingAddress[i].ID" />
                            <strong>Address :@j </strong>

                    <div class="border p-1">
                                <div class="form-group">
                                    <label asp-for="ShipingAddress[i].Line1"></label>
                                    <input type="text" class="form-control" asp-for="ShipingAddress[i].Line1" placeholder="1234 Main St">
                                </div>
                                <div class="form-group">
                                    <label asp-for="ShipingAddress[i].Line2"></label>
                                    <input type="text" class="form-control" asp-for="ShipingAddress[i].Line2" placeholder="Apartment, studio, or floor">
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label asp-for="ShipingAddress[i].City"></label>
                                        <input type="text" asp-for="ShipingAddress[i].City" class="form-control">
                                    </div>
                                    <div class="form-group col-md-4">
                                        <label asp-for="ShipingAddress[i].State"></label>
                                        <input type="text" asp-for="ShipingAddress[i].State" class="form-control">
                                        @*<select id="inputState" class="form-control">
                            <option selected>Choose...</option>
                            <option>...</option>
                        </select>*@
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="ShipingAddress[i].StateCode"></label>
                                        <input type="text" asp-for="ShipingAddress[i].StateCode" class="form-control">
                                    </div>
                                    <div class="form-group col-md-2">
                                        <label asp-for="ShipingAddress[i].PINCode"></label>
                                        <input type="text" class="form-control" asp-for="ShipingAddress[i].PINCode">
                                    </div>
                                </div>
                            </div>
                            <br />
                        }

                        @*<div class="form-group">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
        </div>
        <div class="form-group">
            <label for="inputAddress2">Address 2</label>
            <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputCity">City</label>
                <input type="text" class="form-control" id="inputCity">
            </div>
            <div class="form-group col-md-4">
                <label for="inputState">State</label>
                <select id="inputState" class="form-control">
                    <option selected>Choose...</option>
                    <option>...</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label for="inputZip">Zip</label>
                <input type="text" class="form-control" id="inputZip">
            </div>*@

                    </div>
                    <div class="row justify-content-sm-center p-1">
                        <div class="col-sm-4 bg-primary text-center text-light " onclick="AddAddress()" style="font-size: 30px;cursor: pointer;">
                            <strong> <span>&#43;</span></strong>
                        </div>
                    </div>
                </div>
            </div>
            @Html.HiddenFor(el => el.CreatedOn)
            <div class="form-group">
                <input type="submit" value="save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    var currentSize = "@Model?.ShipingAddress?.Count()";
    function AddAddress() {
        if (currentSize == "") currentSize = "0";
        currentSize = Number(currentSize);
        var innerHtml = `
    <strong>Address : ${currentSize+1} </strong>
     <div class="border p-1">
                        <div class="form-group">
                            <label for="ShipingAddress[${currentSize}]_Line1">Line1</label>
                            <input type="text" class="form-control" placeholder="1234 Main St" data-val="true" data-val-required="The Line1 field is required." id="ShipingAddress[${currentSize}]_Line1" name="ShipingAddress[${currentSize}].Line1" value="">
                        </div>
                        <div class="form-group">
                            <label for="ShipingAddress[${currentSize}]_Line2">Line2</label>
                            <input type="text" class="form-control" placeholder="Apartment, studio, or floor" id="ShipingAddress[${currentSize}]_Line2" name="ShipingAddress[${currentSize}].Line2" value="">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="ShipingAddress[${currentSize}]_City">City</label>
                                <input type="text" class="form-control" data-val="true" data-val-required="The City field is required." id="ShipingAddress[${currentSize}]_City" name="ShipingAddress[${currentSize}].City" value="">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="ShipingAddress[${currentSize}]_State">State</label>
                                <input type="text" class="form-control" data-val="true" data-val-required="The State field is required." id="ShipingAddress[${currentSize}]_State" name="ShipingAddress[${currentSize}].State" value="">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="ShipingAddress[${currentSize}]_StateCode">StateCode</label>
                                <input type="text" class="form-control" data-val="true" data-val-required="The StateCode field is required." id="ShipingAddress[${currentSize}]_StateCode" name="ShipingAddress[${currentSize}].StateCode" value="">
                            </div>
                            <div class="form-group col-md-2">
                                <label for="ShipingAddress[${currentSize}]_PINCode">PINCode</label>
                                <input type="text" class="form-control" data-val="true" data-val-required="The PINCode field is required." id="ShipingAddress[${currentSize}]_PINCode" name="ShipingAddress[${currentSize}].PINCode" value="">
                            </div>
                        </div>

                    </div><br>
`;
        document.getElementById("sAddresses").innerHTML += innerHtml;
        currentSize++;
    }
    </script>

}

