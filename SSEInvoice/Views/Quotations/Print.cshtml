@model SSEInvoice.Models.ViewModels.QuotViewModels

@{
    Func<int, string> getQuot = delegate (int x)
    {
        var y = x.ToString();
        if (y.Length <5)
        {
            for (var i = y.Length; i <5; i++)
            {
                y = "0" + y;
            }
        }
        return "Q"+y;
    };
    ViewData["Title"] = "Quotation : " + getQuot(Model.Quotation.Id);
    Layout = "~/Views/Shared/_Layout.cshtml";
}
