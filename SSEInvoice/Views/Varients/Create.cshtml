@model SSEInvoice.Models.Varient

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4> Create Varient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"> Product Name</label>
                <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UnitId" class="control-label"> Unit Name</label>
                <select asp-for="UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VarientName" class="control-label"></label>
                <input asp-for="VarientName" class="form-control" />
                <span asp-validation-for="VarientName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SGST" class="control-label"></label>
                <input asp-for="SGST" class="form-control" />
                <span asp-validation-for="SGST" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CGST" class="control-label"></label>
                <input asp-for="CGST" class="form-control" />
                <span asp-validation-for="CGST" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

